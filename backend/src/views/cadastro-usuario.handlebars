<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Logar</title>
    <!-- Link para os arquivos CSS -->
    <link rel="stylesheet" href="/backend/public/css/cadastro-usuario.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Muli:wght@300;400;600&display=swap">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Lado esquerdo com imagem -->
            <div class="col-md-6 p-0 left-side">
                <img src="/backend/public/imagens/cadastro-usuario.jpg" alt="Imagem de Login" class="login-image">
            </div>
            <!-- Lado direito com o formulário de login -->
            <div class="col-md-6 p-5 d-flex justify-content-center align-items-center right-side">
                <div class="login-form">
                    <h1 class="mb-4 text-center">Nova Conta</h1>

                    <!-- Barra de mensagens de erro -->
                    {{#if error}}
                        <div class="alert alert-danger">{{error}}</div>
                    {{/if}}

                    <form action="/api/usuarios/adicionar" method="POST" id="formCadastro">
                        <div class="mb-3 email-senha">
                            <label for="text" class="form-label">Nome</label>
                            <input type="text" class="form-control" id="nome" name="nome" placeholder="Digite o seu nome" required>
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Digite o seu e-mail" required autocomplete="email">
                            <label for="senha" class="form-label">Senha</label>
                            <input type="password" class="form-control" id="senha" name="senha" placeholder="Mínimo de 8 caracteres" required autocomplete="new-password">
                            <label for="senha" class="form-label">Confirmar Senha</label>
                            <input type="password" class="form-control" id="confirmarSenha" name="confirmarSenha" placeholder="Confirmar senha" required autocomplete="new-password">
                        </div>
    
                        <button type="submit" class="btn btn-primary w-100">Cadastrar</button>
                    </form>
                        <div class="d-flex justify-content-center cadastrar">
                            <a href="/api/usuarios/login">Já possui conta? Faça login</a>
                        </div>
                        <div class="d-flex justify-content-center align-items-center fast-access">
                            <p class="line"></p>
                            <p class="text-overlay">Ou registre-se com</p>
                            <p class="line"></p>
                        </div>
                        <div class="d-flex justify-content-center">
                            <a href="/auth/apple">
                                <img src="/backend/public/imagens/apple.png" alt="Apple" class="social-icon">
                            </a>
                            <a href="/auth/google">
                                <img src="/backend/public/imagens/google.png" alt="Google" class="social-icon">
                            </a>
                            <a href="/auth/facebook">
                                <img src="/backend/public/imagens/facebook.png" alt="Facebook" class="social-icon">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        document.getElementById('formCadastro').addEventListener('submit', function(event) {
            const senha = document.getElementById('senha').value;
            const confirmarSenha = getElementById('confirmarSenha').value;

            if(senha !== confirmarSenha){
                event.preventDefault();
                alert('As senhas não coincidem!');
            }
        })
    </script>
</body>
</html>