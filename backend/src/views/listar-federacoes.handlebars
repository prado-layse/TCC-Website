<h1>LISTAR FEDERAÇÕES</h1>
<button onclick="window.location.href='/api/federacoes/cadastrar'">Nova Federação</button>
<table>
    <thead>
        <tr>
            <th>Código Federação</th>
            <th>Razão Social</th>
            <th>Nome Fantasia</th>
            <th>Sigla</th>
            <th>CNPJ</th>
            <th>Presidente</th>
            <th>Situação</th>
            <th>CEP</th>
            <th>Endereço</th>
            <th>Cidade</th>
            <th>Estado</th>
            <th>País</th>
            <th>Telefone</th>
            <th>Email</th>
            <th>Facebook</th>
            <th>Instagram</th>
            <th>Site</th>
        </tr>
    </thead>
    <tbody>
    {{#each federacoes}}
    <tr>
        <td>{{this.codFederacao}}</td>
        <td>{{this.razaoSocial}}</td>
        <td>{{this.nomeFantasia}}</td>
        <td>{{this.sigla}}</td>
        <td>{{this.cnpj}}</td>
        <td>{{this.presidente}}</td>
        <td>{{this.situacao}}</td>
            {{#each this.Enderecos}} <!-- Abertura do loop para Enderecos -->
                <td>{{this.cep}}</td>
                <td>{{this.endereco}}</td>
                <td>{{this.cidade}}</td>
                <td>{{this.estado}}</td>
                <td>{{this.pais}}</td>
            {{/each}} <!-- Fechamento do loop para Enderecos -->
        </td>
        <td>
            {{#each this.Contatos}} <!-- Abertura do loop para Contatos -->
                <td>{{this.telefone}}</td>
                <td>{{this.email}}</td>
                <td>{{this.facebook}}</td>
                <td>{{this.instagram}}</td>
                <td>{{this.site}}</td>
                <a href="/federacoes/{{this.codFederacao}}/editar"><button type="button">Editar Federação</button></a>
            {{/each}} <!-- Fechamento do loop para Contatos -->
        </td>
    </tr>
    {{/each}}
</tbody>
</table>
