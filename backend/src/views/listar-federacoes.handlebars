<h1>LISTAR FEDERAÇÕES</h1>
<button onclick="window.location.href='/api/federacoes/cadastrar'">Nova Federação</button>
<table>
    <thead>
        <tr>
            <th>Código Federação</th>
            <th>Razão Social</th>
            <th>Nome Fantasia</th>
            <th>Sigla</th>
            <th>CNPJ</th>
            <th>Presidente</th>
            <th>CEP</th>
            <th>Endereço</th>
            <th>Cidade</th>
            <th>Estado</th>
            <th>País</th>
            <th>Telefone</th>
            <th>Email</th>
            <th>Facebook</th>
            <th>Instagram</th>
            <th>Site</th>
        </tr>
    </thead>
    <tbody>
    {{#each federacoes}}
    <tr>
        <td>{{this.codFederacao}}</td>
        <td>{{this.razaoSocial}}</td>
        <td>{{this.nomeFantasia}}</td>
        <td>{{this.sigla}}</td>
        <td>{{this.cnpj}}</td>
        <td>{{this.presidente}}</td>
            {{#each this.Enderecos}} <!-- Abertura do loop para Enderecos -->
                <td>{{this.cep}}</td>
                <td>{{this.enderecoSede}}</td>
                <td>{{this.cidade}}</td>
                <td>{{this.estado}}</td>
                <td>{{this.pais}}</td>
            {{/each}} <!-- Fechamento do loop para Enderecos -->
        </td>
        <td>
            {{#each this.Contatos}} <!-- Abertura do loop para Contatos -->
                <p>Telefone: {{this.telefone}}</p>
                <p>Email: {{this.email}}</p>
                <p>Facebook: {{this.facebook}}</p>
                <p>Instagram: {{this.instagram}}</p>
                <p>Site: {{this.site}}</p>
            {{/each}} <!-- Fechamento do loop para Contatos -->
        </td>
    </tr>
    {{/each}}
</tbody>
</table>
