<form action="/federacoes/{{federacao.codFederacao}}/editar" method="POST">
    <input type="hidden" name="_method" value="PUT">

    <label for="nomeFantasia">Nome Fantasia:</label>
    <input type="text" name="nomeFantasia" value="{{federacao.nomeFantasia}}" required>
    <br>

    <label for="cep">CEP:</label>
    <input type="text" name="cep" value="{{federacao.Enderecos.0.cep}}" required>
    <br>

    <label for="endereco">Endereço:</label>
    <input type="text" name="endereco" value="{{federacao.Enderecos.0.endereco}}" required>
    <br>

    <label for="cidade">Cidade:</label>
    <input type="text" name="cidade" value="{{federacao.Enderecos.0.cidade}}" required>
    <br>

    <label for="estado">Estado:</label>
    <input type="text" name="estado" value="{{federacao.Enderecos.0.estado}}" required>
    <br>

    <label for="pais">País:</label>
    <input type="text" name="pais" value="{{federacao.Enderecos.0.pais}}" required>
    <br>

    <label for="telefone">Telefone:</label>
    <input type="text" name="telefone" value="{{federacao.Contatos.0.telefone}}" required>
    <br>

    <label for="email">Email:</label>
    <input type="email" name="email" value="{{federacao.Contatos.0.email}}" required>
    <br>

    <label for="facebook">Facebook:</label>
    <input type="text" name="facebook" value="{{federacao.Contatos.0.facebook}}">
    <br>

    <label for="instagram">Instagram:</label>
    <input type="text" name="instagram" value="{{federacao.Contatos.0.instagram}}">
    <br>

    <label for="site">Site:</label>
    <input type="text" name="site" value="{{federacao.Contatos.0.site}}">
    <br>

    <button type="submit">Salvar Alterações</button>
</form>
